
@{
    ViewBag.Title = "CarDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Entity
@model Car
    <style>
        .kutu{
            margin:150px;
        }
        .kutu2{
            box-sizing:border-box;
            border:2px solid silver;
            padding:15px;
        }
    </style>
<div class="kutu">
    <section id="car-list-area" class="section-padding">
        <div class="container">
            <div class="row">
                <!-- Car List Content Start -->

                <div class="col-lg-8">
                    <div class="car-details-content">
                        <h2>@Model.CarModel @Model.CarBrand.BrandName<span class="price">Kiralama :@Model.Price.ToString("C") <b></b></span></h2>

                        <div class="single-car-preview">
                            <img src='~/Uploads/@Html.Raw(Model.Id+".jpg")' alt="JSOFT">
                        </div>


                        <div class="car-details-info">
                            <h4>Ek Açıklama</h4>
                            <p>@Model.CarDetail.CarAbout</p>

                            <div class="technical-info">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="tech-info-table">
                                            <table class="table table-bordered">
                                                <tr>
                                                    <th>Class</th>
                                                    <td>@Model.CarDetail.CarClass</td>
                                                </tr>
                                                <tr>
                                                    <th>Fuel</th>
                                                    <td>@Model.CarDetail.CarFuel</td>
                                                </tr>
                                                <tr>
                                                    <th>Doors</th>
                                                    <td>@Model.CarDetail.Doors</td>
                                                </tr>
                                                <tr>
                                                    <th>GearBox</th>
                                                    <td>@Model.CarDetail.Properties</td>
                                                </tr>
                                            </table>
                                        </div>
                                    </div>

                                    <div class="col-lg-6">
                                        <div class="tech-info-list">
                                            <ul>
                                                <li>ABS</li>
                                                <li>Air Bags</li>
                                                <li>Bluetooth</li>
                                                <li>Car Kit</li>
                                                <li>GPS</li>
                                                <li>Music</li>
                                                <li>Bluetooth</li>
                                                <li>ABS</li>
                                                <li>GPS</li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="review-area">
                                <h3>Be the first to review “@Model.CarModel @Model.CarBrand.BrandName”</h3>
                                <div class="review-star">
                                    <p class="rating">
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star unmark"></i>
                                        <i class="fa fa-star unmark"></i>
                                    </p>
                                </div>

                                @{
                                    if (Session["Giris"] != null)
                                    {
                                <div class="kutu2">
                                    <div style="text-align:center"><h3><strong>BEĞENDİYSENiZ AŞAĞIDAKİ FORMU DOLDURUN</strong></h3></div>
                                    <br />
                                    <div class="review-form">
                                        <form method="post">
                                            <div class="row">
                                                <div class="col-lg-6 col-md-6">
                                                    <div class="name-input">
                                                        <input type="text" id="startDate" name="PickUpDate" placeholder="Alis Tarihi" required>
                                                    </div>
                                                </div>

                                                <div class="col-lg-6 col-md-6">
                                                    <div class="email-input">
                                                        <input type="text" name="ReturnDate" id="endDate" placeholder="Veriliş Tarihi" required>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg">
                                                <textarea rows="5" name="Istek" placeholder="Araba İsteğinizi Belirtin ..."></textarea>
                                            </div>

                                            <input type="hidden" name="CustomerId" value='@Session["Giris"]' />
                                            <input type="hidden" name="CarId" value="@Model.Id" />


                                            <div class="input-submit">
                                                <button type="submit">Gönder</button>
                                                <button type="reset">Temizle</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                                    }
                                }

                            </div>
                        </div>
                    </div>
                </div>
                <!-- Car List Content End -->
                <!-- Sidebar Area Start -->
                <div class="col-lg-4">
                    <div class="sidebar-content-wrap m-t-50">
                        <!-- Single Sidebar Start -->
                        <div class="single-sidebar">
                            <h3>For More Informations</h3>

                            <div class="sidebar-body">
                                <p><i class="fa fa-mobile"></i> +8801816 277 243</p>
                                <p><i class="fa fa-clock-o"></i> Mon - Sat 8.00 - 18.00</p>
                            </div>
                        </div>
                        <!-- Single Sidebar End -->
                      
                        <!-- Single Sidebar Start -->
                        <div class="single-sidebar">
                            <h3>Connect with Us</h3>

                            <div class="sidebar-body">
                                <div class="social-icons text-center">
                                    <a href="#" target="_blank"><i class="fa fa-facebook"></i></a>
                                    <a href="#" target="_blank"><i class="fa fa-twitter"></i></a>
                                    <a href="#" target="_blank"><i class="fa fa-behance"></i></a>
                                    <a href="#" target="_blank"><i class="fa fa-linkedin"></i></a>
                                    <a href="#" target="_blank"><i class="fa fa-dribbble"></i></a>
                                </div>
                            </div>
                        </div>
                        <!-- Single Sidebar End -->
                    </div>
                </div>
                <!-- Sidebar Area End -->
            </div>
        </div>
    </section>

</div>